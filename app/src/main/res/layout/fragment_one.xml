<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context="com.fyusuf.aybuapp.OneFragment">

    <TextView
        android:id="@+id/tarih"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="0.5"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:background="#306bac"
        android:textColor="@color/colorText"
        android:text="Tarih" />
    <TextView
        android:id="@+id/yemek1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:textColor="@color/colorText2"
        android:text="Yemek 1" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#306bac"/>
    <TextView
        android:id="@+id/yemek2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:textColor="@color/colorText2"
        android:layout_weight="1"
        android:text="Yemek 2" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#306bac"/>
    <TextView
        android:id="@+id/yemek3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/colorText2"
        android:layout_weight="1"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:text="Yemek 3" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#306bac"/>
    <TextView
        android:id="@+id/yemek4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:textColor="@color/colorText2"
        android:text="Yemek 4" />

</LinearLayout>
